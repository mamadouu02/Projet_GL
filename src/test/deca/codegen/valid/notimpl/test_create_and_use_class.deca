class Test{
    int a;
    int b;
    int c;

    void Test(int a, int b, int c){
        this.a = a;
        this.b = b;
        this.c = c;
    }

    int sum(){
        return a + b + c;
    }

    int product(){
        return a * b * c;
    }

    int max(){
        int max = a;
        if(b > max){
            max = b;
        }
        if(c > max){
            max = c;
        }
        return max;
    }

    int isGreaterThan(int x){
        if(x > this.c){
            return x;
        }
        else{
            return null;
        }
    }
}

class TestSon extends Test{
    int d;

    void TestSon(int a, int b, int c, int d){
        this.Test(a, b, c);
        this.d = d;
    }

    int sum(){
        return this.sum() + d;
    }

    int product(){
        return this.product() * d;
    }

    int max(){
        int max = this.max();
        if(d > max){
            max = d;
        }
        return max;
    }

    int isGreaterThan(int x){
        if(x > this.d){
            return x;
        }
        else{
            return null;
        }
    }
}
    
